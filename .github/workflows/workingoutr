name: CI
on: [push, pull_request]
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-node@v4
        with:
          node-version: 20
          cache: npm

      # Optional but helps with modern CLIs
      - run: corepack enable

      - run: npm ci

      # Use npx non-interactively + pin versions
      - run: npx --yes <package>@<version> <bin> [args]
